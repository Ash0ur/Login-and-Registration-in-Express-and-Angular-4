    <div class="container">
        <div style="max-width:500px;margin:50px auto;"  class="alert alert-{{result}}">{{message}}</div>
        <form action="/login" method="post" style="max-width:500px;margin:50px auto;">
            <div class="form-group">
            <label for="userMail">Email</label>
            <input class="form-control" id="userMail" type="email" name="useremail" [(ngModel)]="userData.email"  />
            </div>
            <div class="form-group">
                <label for="userPass">Password</label>
            <input class="form-control" id="userPass" type="password" name="userpassword" [(ngModel)]="userData.password" />
            </div>
            <div class="form-group text-center">
            <input type="submit" class="btn btn-success" value="Submit">
            </div>
        </form>
    </div>